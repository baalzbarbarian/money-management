<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_fragment_gt">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#FFF"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/dialog_text_color_custom"
            android:text="Thêm Loại Chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="5dp"
        android:id="@+id/textLayoutDialogEdtLT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:paddingLeft="10dp"
            android:textColorHint="#FFF"
            android:textStyle="bold"
            android:textColor="@color/dialog_text_color_custom"
            android:textSize="13sp"
            android:id="@+id/edtDialogNameLoaiThu"
            android:layout_marginLeft="10dp"
            android:hint="Nhập Loại Chi:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/dialog_btn"
            android:layout_marginRight="5dp"
            android:text="@string/dialog_btn_cancel"
            style="@style/dialog_btn"
            android:id="@+id/btnDialogCancelLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/dialog_btn"
            android:layout_marginLeft="5dp"
            android:text="@string/dialog_btn_add"
            style="@style/dialog_btn"
            android:id="@+id/btnDialogAddLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>